<%- include('partials/header') %>
<body class="body"></body>

<div class="container mt-5">
  <h1 class="form-heading">Register</h1>

  <div class="row">
    <div class="col-sm-8">
      <div class="card form-border">
        <div class="card-body">

          <!-- Makes POST request to /register route -->
          <form action="/register" method="POST" >
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control form-border" name="username">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control form-border" name="password">
            </div>
            <button type="submit" class="btn form-button">Register</button>
          </form>

        </div>
      </div>
    </div>

  </div>
</div>


</body>
<%- include('partials/footer') %>